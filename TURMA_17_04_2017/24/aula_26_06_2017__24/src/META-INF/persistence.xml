<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<persistence-unit name="unidade_ManyToMany">
		<provider>
			oracle.toplink.essentials.ejb.cmp3.EntityManagerFactoryProvider
		</provider>
		<class>br.com.turma_java.ManyToMany.Turma</class>
		<class>br.com.turma_java.ManyToMany.Professor</class>
		<properties>
			<property name="toplink.logging.level" value="INFO" />
			<property name="toplink.jdbc.driver"   value="com.mysql.jdbc.Driver" />
			<property name="toplink.jdbc.url"      value="jdbc:mysql://LOGUSTI-PC/ManyToMany" />
			<property name="toplink.jdbc.user"     value="root" />				
			<property name="toplink.jdbc.password" value="root" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="unidade_heranca2">
		<provider>
			oracle.toplink.essentials.ejb.cmp3.EntityManagerFactoryProvider
		</provider>
		<class>br.com.turma_java.Heranca2.Pessoa</class>
		<class>br.com.turma_java.Heranca2.Cliente</class>
		<class>br.com.turma_java.Heranca2.Funcionario</class>
		<properties>
			<property name="toplink.logging.level" value="INFO" />
			<property name="toplink.jdbc.driver"   value="com.mysql.jdbc.Driver" />
			<property name="toplink.jdbc.url"      value="jdbc:mysql://LOGUSTI-PC/heranca2" />
			<property name="toplink.jdbc.user"     value="root" />				
			<property name="toplink.jdbc.password" value="root" />
		</properties>
	</persistence-unit>

</persistence>